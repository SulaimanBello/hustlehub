# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/hustlehub
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Flutterwave Payment Gateway
# Get these from: https://dashboard.flutterwave.com/dashboard/settings/apis
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TESTxxxxxxxxxxxxxxxxx
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret-hash

# SMS Provider (Choose one: termii, twilio, or africas-talking)
# RECOMMENDED: termii (best for Nigeria - 5-8x cheaper, better delivery rates)
SMS_PROVIDER=termii

# Termii (RECOMMENDED for Nigeria) - See docs/SMS_SETUP_GUIDE.md
# Get API key from: https://termii.com
TERMII_API_KEY=your_termii_api_key_here
TERMII_SENDER_ID=HustleHub  # Or your custom approved sender ID

# Twilio (Alternative/Fallback)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking (Alternative)
AFRICAS_TALKING_API_KEY=your_at_api_key
AFRICAS_TALKING_USERNAME=sandbox

# Business Configuration
PLATFORM_FEE_PERCENT=15
DEFAULT_TASK_RADIUS_KM=5
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,exp://localhost:19000

# Logging
LOG_LEVEL=info
